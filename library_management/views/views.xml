<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="library_management.form">
      <field name="name">library_management Form</field>
      <field name="model">library_management.books</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="description"/>
          <field name="tags" widget="many2mang_tags"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="library_management.action_window">
      <field name="name">library_management window</field>
      <field name="res_model">library_management.books</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <!--
    <record model="ir.actions.server" id="library_management.action_server">
    <field name="name">library_management server</field>
    <field name="model_id" ref="model_library_management_library_management"/>
    <field name="state">code</field>
    <field name="code">
        action = {
        "type": "ir.actions.act_window",
        "view_mode": "tree,form",
        "res_model": self._name,
        }
    </field>
    </record>
    -->

    <!-- Top menu item -->
    <menuitem name="Library Management" id="library_management.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Books" id="library_management.menu_books" parent="library_management.menu_root"/>
    <menuitem name="Menu 2" id="library_management.menu_2" parent="library_management.menu_root"/>
    <!-- actions -->
    <menuitem name="List" id="library_management.menu_book_list" parent="library_management.menu_books"
              action="library_management.action_window"/>
    <!-- <menuitem name="Server to list" id="library_management" parent="library_management.menu_2" -->
    <!--           action="library_management.action_server"/> -->
  </data>
</odoo>
